<header>
  <div class='content-wrapper'>
    <a id='tr-logo' href='/' title={{t 'common.appDesc'}}>{{t 'common.appTitle'}}</a>
    <nav>
      <ul>
        {{#if this.auth.currentUser}}
          <li class="profile-menu">
            <span class='material-symbols-outlined'>account_circle</span>
            <span>{{this.auth.currentUser.name}}</span>
            <Ui::Popup>
              <ul role="listbox">
                <li {{on 'click' (fn this.onNavAction 'logout')}} role="button">{{t "common.logout"}}</li>
              </ul>
            </Ui::Popup>
          </li>
          <li>
            <button
              type='button'
              id="write-btn"
              class='btn btn-flat'
              {{on 'click' (fn this.onNavAction 'createPost')}}
            >
              <span>{{t "post.write_post"}}</span>
            </button>
          </li>
        {{else}}
          <li>
            <button
              type='button'
              id="get-started-btn"
              class='btn btn-flat'
              {{on 'click' (fn this.onNavAction 'loginRegister')}}
            >
              {{t "common.get_started"}}
            </button>
          </li>
        {{/if}}
      </ul>
    </nav>
  </div>
</header>
{{yield}}